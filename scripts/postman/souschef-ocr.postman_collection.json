{
  "info": {
    "name": "SousChef OCR",
    "_postman_id": "7a3d9f2a-ocr-collection",
    "description": "Postman collection for testing OCR endpoints (/api/ocr and /api/ocr/parse)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": " https://souschef-api-238603140451.us-central1.run.app",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string",
      "description": "Bearer token for Authorization header"
    }
  ],
  "item": [
    {
      "name": "Login (Get token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Save access token from login response to collection variable 'authToken'",
              "try {",
              "  const body = pm.response.json();",
              "  const token = body.accessToken || body.access_token || body.access_token;",
              "  if (token) { pm.collectionVariables.set('authToken', token); console.log('authToken set'); }",
              "} catch (e) { console.warn('Failed to set authToken from response', e); }"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"lawrence.armand@outlook.com\",\n  \"password\": \"living\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "Parse Text (JSON)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"1 cup flour\\n2 eggs\\nMix and bake.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ocr/parse",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ocr", "parse"]
        }
      },
      "response": []
    },
    {
      "name": "Upload Image (multipart/form-data)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "image",
              "type": "file",
              "src": ""
            },
            {
              "key": "ocrText",
              "type": "text",
              "value": "Optional OCR text"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/ocr",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ocr"]
        }
      },
      "response": []
    }
  ]
}
